{
    "name": "rostam-sodagari/laravel-yekpay",
    "description": "Laravel wrapper for YekPay payment API (request/start/verify).",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "RostamSodagari\\YekPay\\": "src/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload-dev": {
        "psr-4": {
            "RostamSodagari\\YekPay\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RostamSodagari\\YekPay\\YekPayServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
